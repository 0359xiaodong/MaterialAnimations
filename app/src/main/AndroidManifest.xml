<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.malmstein.materialanimations">

  <uses-permission android:name="android.permission.INTERNET" />

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/Theme.MaterialAnimations">
    <activity
      android:name="com.malmstein.materialanimations.interpolator.InterpolatorActivity"
      android:label="@string/activity_interpolator">

    </activity>
    <activity
      android:name="com.malmstein.materialanimations.elevation.ElevationActivity"
      android:label="@string/activity_elevation">
    </activity>
    <activity
      android:name="com.malmstein.materialanimations.activityscenetransitionbasic.TransitionActivity"
      android:label="@string/activity_transition">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity android:name="com.malmstein.materialanimations.activityscenetransitionbasic.DetailActivity" />
  </application>

</manifest>
